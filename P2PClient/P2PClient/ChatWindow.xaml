<Window
  x:Class="P2PChat.ChatWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:P2PChat"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  Title="Chat"
  Width="634.166"
  Height="238"
  mc:Ignorable="d">
  <Grid>
    <TextBox
      Name="txtConversation"
      Margin="5,5,5,40"
      IsReadOnly="True"
      TextWrapping="Wrap"
      VerticalScrollBarVisibility="Visible" />
    <TextBox
      Name="txtMessage"
      Height="30"
      Margin="5,0,227,5"
      VerticalAlignment="Bottom"
      KeyDown="txtMessage_KeyDown" />
    <Button
      Name="btnSend"
      Width="40"
      Height="30"
      Margin="0,0,171,5"
      HorizontalAlignment="Right"
      VerticalAlignment="Bottom"
      Click="btnSend_Click"
      Content="Send" />
    <Button
      Name="btnSendCallNotify"
      Width="60"
      Height="30"
      Margin="0,173,106,0"
      HorizontalAlignment="Right"
      VerticalAlignment="Top"
      Click="btnSendCallNotify_Click"
      Content="Call Notify" />
    <Button
      Width="75"
      Height="30"
      Margin="525,173,0,0"
      HorizontalAlignment="Left"
      VerticalAlignment="Top"
      Content="Send file" Click="Button_Click" />
  </Grid>
</Window>
